<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="홈"
        android:layout_gravity="left"
        android:id="@+id/home_btn" style="@style/button_font"
        android:background="@drawable/button"
        android:onClick="home_btn"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="momorize"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="외우기"
            android:id="@+id/game" style="@style/button_font"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button"
            android:onClick="memorize"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="단어추가"
            android:id="@+id/add" style="@style/button_font"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:onClick="add" />

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:text="단어삭제"-->
            <!--android:id="@+id/delete" style="@style/button_font"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:background="@drawable/button"-->
            <!--android:onClick="delete"/>-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="단어검색"
            android:id="@+id/search" style="@style/button_font"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:onClick="search"/>

    </LinearLayout>
</LinearLayout>