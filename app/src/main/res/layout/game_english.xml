<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="file"
            android:textSize="15dp"
            android:layout_marginLeft="300dp"
            android:id="@+id/table"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답을 선택하세요"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="words"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/problem"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/example1" style="@style/button_font"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:layout_marginBottom="30dp"
            android:onClick="onClick"
            ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/example2" style="@style/button_font"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:layout_marginBottom="30dp"
            android:onClick="onClick"
            ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/example3" style="@style/button_font"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:layout_marginBottom="30dp"
            android:onClick="onClick"
            ></Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="30dp"
        android:id="@+id/correct"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next>"
            android:layout_marginLeft="150dp"
            android:textSize="15dp"
            android:onClick="next_btn"
            android:background="@drawable/button" style="@style/button_font"
            />

    </LinearLayout>
</LinearLayout>